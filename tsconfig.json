{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./index.d.ts"
    ],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}

